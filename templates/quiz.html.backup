<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ topic }} Quiz - Math Master</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- WHO AM I: CSS for reveal grid -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/who_am_i.css') }}">
    
    <!-- Your custom quiz CSS -->
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px 0;
        }
        
        .quiz-container {
            max-width: 900px;
            margin: 0 auto;
        }
        
        .question-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            padding: 30px;
            margin-bottom: 20px;
        }
        
        .question-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 25px;
        }
        
        .question-number {
            font-size: 0.9rem;
            opacity: 0.9;
        }
        
        .question-text {
            font-size: 1.3rem;
            font-weight: 600;
            margin: 15px 0;
            line-height: 1.6;
        }
        
        .option-btn {
            width: 100%;
            text-align: left;
            padding: 15px 20px;
            margin: 10px 0;
            border: 2px solid #e0e0e0;
            background: white;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-size: 1.1rem;
        }
        
        .option-btn:hover:not(.disabled) {
            border-color: #667eea;
            background: #f8f9ff;
            transform: translateX(5px);
        }
        
        .option-btn.selected {
            border-color: #667eea;
            background: #667eea;
            color: white;
        }
        
        .option-btn.correct {
            border-color: #28a745;
            background: #28a745;
            color: white;
        }
        
        .option-btn.incorrect {
            border-color: #dc3545;
            background: #dc3545;
            color: white;
        }
        
        .option-btn.disabled {
            cursor: not-allowed;
            opacity: 0.6;
        }
        
        .stats-bar {
            background: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-around;
            align-items: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        
        .stat-item {
            text-align: center;
        }
        
        .stat-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: #667eea;
        }
        
        .stat-label {
            font-size: 0.85rem;
            color: #666;
            text-transform: uppercase;
        }
        
        .feedback-box {
            padding: 20px;
            border-radius: 10px;
            margin-top: 20px;
            display: none;
        }
        
        .feedback-box.correct {
            background: #d4edda;
            border: 2px solid #28a745;
            color: #155724;
        }
        
        .feedback-box.incorrect {
            background: #f8d7da;
            border: 2px solid #dc3545;
            color: #721c24;
        }
        
        .explanation {
            margin-top: 15px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 8px;
            font-size: 0.95rem;
        }
        
        .next-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            font-size: 1.1rem;
            font-weight: bold;
            padding: 12px 40px;
            border-radius: 30px;
            margin-top: 20px;
            transition: all 0.3s ease;
        }
        
        .next-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        }
        
        .progress-bar-custom {
            height: 30px;
            background: white;
            border-radius: 15px;
            overflow: hidden;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #28a745 0%, #20c997 100%);
            transition: width 0.5s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }
        
        .quiz-complete {
            text-align: center;
            padding: 40px;
        }
        
        .score-circle {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 30px auto;
            color: white;
        }
        
        .score-number {
            font-size: 3rem;
            font-weight: bold;
        }
        
        .score-label {
            font-size: 1rem;
        }
    </style>
</head>
<body>

<div class="quiz-container">
    
    <!-- WHO AM I: Reveal Grid Container - Only shows for Descriptive Statistics -->
    {% if topic == 'Descriptive Statistics' %}
    <div id="who-am-i-container" class="who-am-i-container mb-4">
        <div class="text-center">
            <i class="fas fa-spinner fa-spin fa-2x text-white"></i>
            <p class="text-white mt-2">Loading mystery image...</p>
        </div>
    </div>
    {% endif %}
    
    <!-- Stats Bar -->
    <div class="stats-bar">
        <div class="stat-item">
            <div class="stat-value" id="current-score">0</div>
            <div class="stat-label">Score</div>
        </div>
        <div class="stat-item">
            <div class="stat-value" id="questions-answered">0</div>
            <div class="stat-label">Answered</div>
        </div>
        <div class="stat-item">
            <div class="stat-value" id="correct-count">0</div>
            <div class="stat-label">Correct</div>
        </div>
        <div class="stat-item">
            <div class="stat-value" id="streak">0</div>
            <div class="stat-label">Streak</div>
        </div>
    </div>
    
    <!-- Progress Bar -->
    <div class="progress-bar-custom">
        <div class="progress-fill" id="progress-fill" style="width: 0%;">
            <span id="progress-text">0%</span>
        </div>
    </div>
    
    <!-- Question Card -->
    <div class="question-card">
        <div class="question-header">
            <div class="question-number">
                Question <span id="question-num">1</span> of <span id="total-questions">{{ total_questions }}</span>
            </div>
            <div class="question-text" id="question-text">
                Loading question...
            </div>
        </div>
        
        <!-- Options -->
        <div id="options-container">
            <button class="option-btn" data-option="0">
                <strong>A)</strong> <span class="option-text"></span>
            </button>
            <button class="option-btn" data-option="1">
                <strong>B)</strong> <span class="option-text"></span>
            </button>
            <button class="option-btn" data-option="2">
                <strong>C)</strong> <span class="option-text"></span>
            </button>
            <button class="option-btn" data-option="3">
                <strong>D)</strong> <span class="option-text"></span>
            </button>
        </div>
        
        <!-- Feedback Box -->
        <div class="feedback-box" id="feedback-box">
            <div id="feedback-message"></div>
            <div class="explanation" id="explanation" style="display: none;"></div>
        </div>
        
        <!-- Next Button -->
        <div class="text-center">
            <button class="next-btn" id="next-btn" style="display: none;">
                Next Question <i class="fas fa-arrow-right"></i>
            </button>
        </div>
    </div>
    
    <!-- Quiz Complete Card (Hidden initially) -->
    <div class="question-card quiz-complete" id="quiz-complete" style="display: none;">
        <h2><i class="fas fa-trophy text-warning"></i> Quiz Complete!</h2>
        
        <div class="score-circle">
            <div class="score-number" id="final-score">0</div>
            <div class="score-label">points</div>
        </div>
        
        <h4 id="final-percentage">0%</h4>
        <p id="final-message">Great work!</p>
        
        <!-- WHO AM I: Bonus points display -->
        {% if topic == 'Descriptive Statistics' %}
        <div id="who-am-i-bonus-display" style="display: none;">
            <div class="alert alert-success mt-3">
                <i class="fas fa-star"></i> 
                <strong>Who Am I? Bonus:</strong> 
                <span id="bonus-points-display">0</span> points!
            </div>
        </div>
        {% endif %}
        
        <div class="mt-4">
            <a href="{{ url_for('student_dashboard') }}" class="btn btn-primary btn-lg">
                <i class="fas fa-home"></i> Back to Dashboard
            </a>
            <button class="btn btn-success btn-lg" onclick="location.reload()">
                <i class="fas fa-redo"></i> Retry Quiz
            </button>
        </div>
    </div>
    
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- WHO AM I: JavaScript for reveal functionality -->
<script src="{{ url_for('static', filename='js/who_am_i.js') }}"></script>

<!-- Quiz Logic -->
<script>
// Quiz Configuration
const TOPIC = "{{ topic }}";
const DIFFICULTY = "{{ difficulty }}";
const POINTS_PER_QUESTION = 10;
const QUIZ_ATTEMPT_ID = {{ quiz_attempt_id if quiz_attempt_id else 'null' }};

// Quiz State
let questions = {{ questions | tojson | safe }};
let currentQuestionIndex = 0;
let score = 0;
let correctAnswers = 0;
let currentStreak = 0;
let selectedAnswer = null;
let answeredQuestions = 0;

// WHO AM I: Track if feature is enabled for this topic
const WHO_AM_I_ENABLED = TOPIC === 'Descriptive Statistics';

// Initialize quiz
document.addEventListener('DOMContentLoaded', function() {
    // WHO AM I: Initialize reveal grid if enabled
    {% if topic == 'Descriptive Statistics' %}
    if (WHO_AM_I_ENABLED && typeof initializeWhoAmI === 'function') {
        initializeWhoAmI(TOPIC, DIFFICULTY, QUIZ_ATTEMPT_ID);
    }
    {% endif %}
    
    // Set total questions
    document.getElementById('total-questions').textContent = questions.length;
    
    // Load first question
    loadQuestion();
    
    // Set up option click handlers
    document.querySelectorAll('.option-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            selectAnswer(parseInt(this.dataset.option));
        });
    });
    
    // Set up next button
    document.getElementById('next-btn').addEventListener('click', nextQuestion);
});

function loadQuestion() {
    if (currentQuestionIndex >= questions.length) {
        showQuizComplete();
        return;
    }
    
    const question = questions[currentQuestionIndex];
    
    // Update question number
    document.getElementById('question-num').textContent = currentQuestionIndex + 1;
    
    // Update question text
    document.getElementById('question-text').textContent = question.question;
    
    // Update options
    const optionButtons = document.querySelectorAll('.option-btn');
    question.options.forEach((option, index) => {
        const optionText = optionButtons[index].querySelector('.option-text');
        optionText.textContent = option;
        
        // Reset button state
        optionButtons[index].classList.remove('selected', 'correct', 'incorrect', 'disabled');
        optionButtons[index].disabled = false;
    });
    
    // Hide feedback and next button
    document.getElementById('feedback-box').style.display = 'none';
    document.getElementById('next-btn').style.display = 'none';
    
    // Reset selected answer
    selectedAnswer = null;
}

function selectAnswer(optionIndex) {
    if (selectedAnswer !== null) return; // Already answered
    
    selectedAnswer = optionIndex;
    const question = questions[currentQuestionIndex];
    const isCorrect = optionIndex === question.correct;
    
    // Update UI
    const optionButtons = document.querySelectorAll('.option-btn');
    optionButtons.forEach((btn, index) => {
        btn.disabled = true;
        btn.classList.add('disabled');
        
        if (index === question.correct) {
            btn.classList.add('correct');
        } else if (index === optionIndex && !isCorrect) {
            btn.classList.add('incorrect');
        }
    });
    
    // Update stats
    answeredQuestions++;
    document.getElementById('questions-answered').textContent = answeredQuestions;
    
    if (isCorrect) {
        score += POINTS_PER_QUESTION;
        correctAnswers++;
        currentStreak++;
        
        document.getElementById('current-score').textContent = score;
        document.getElementById('correct-count').textContent = correctAnswers;
        document.getElementById('streak').textContent = currentStreak;
        
        // WHO AM I: Reveal tile on correct answer
        {% if topic == 'Descriptive Statistics' %}
        if (WHO_AM_I_ENABLED && typeof onCorrectAnswer === 'function') {
            onCorrectAnswer();
        }
        {% endif %}
        
        showFeedback(true, question.explanation);
    } else {
        currentStreak = 0;
        document.getElementById('streak').textContent = 0;
        showFeedback(false, question.explanation);
    }
    
    // Update progress
    updateProgress();
    
    // Show next button
    document.getElementById('next-btn').style.display = 'inline-block';
}

function showFeedback(isCorrect, explanation) {
    const feedbackBox = document.getElementById('feedback-box');
    const feedbackMessage = document.getElementById('feedback-message');
    const explanationDiv = document.getElementById('explanation');
    
    feedbackBox.className = 'feedback-box ' + (isCorrect ? 'correct' : 'incorrect');
    feedbackBox.style.display = 'block';
    
    if (isCorrect) {
        feedbackMessage.innerHTML = '<i class="fas fa-check-circle"></i> <strong>Correct!</strong> +' + POINTS_PER_QUESTION + ' points';
    } else {
        feedbackMessage.innerHTML = '<i class="fas fa-times-circle"></i> <strong>Incorrect</strong>';
    }
    
    // Show explanation
    if (explanation) {
        explanationDiv.innerHTML = '<strong>Explanation:</strong> ' + explanation;
        explanationDiv.style.display = 'block';
    }
}

function updateProgress() {
    const progress = ((currentQuestionIndex + 1) / questions.length) * 100;
    document.getElementById('progress-fill').style.width = progress + '%';
    document.getElementById('progress-text').textContent = Math.round(progress) + '%';
}

function nextQuestion() {
    currentQuestionIndex++;
    loadQuestion();
}

function showQuizComplete() {
    // Hide question card
    document.querySelector('.question-card').style.display = 'none';
    
    // WHO AM I: Get bonus points if enabled
    let whoAmIBonus = 0;
    {% if topic == 'Descriptive Statistics' %}
    if (WHO_AM_I_ENABLED && typeof getWhoAmIBonusPoints === 'function') {
        whoAmIBonus = getWhoAmIBonusPoints();
        if (whoAmIBonus > 0) {
            document.getElementById('who-am-i-bonus-display').style.display = 'block';
            document.getElementById('bonus-points-display').textContent = whoAmIBonus;
        }
    }
    {% endif %}
    
    // Calculate final score with bonus
    const finalScore = score + whoAmIBonus;
    const percentage = Math.round((correctAnswers / questions.length) * 100);
    
    // Show completion card
    document.getElementById('quiz-complete').style.display = 'block';
    document.getElementById('final-score').textContent = finalScore;
    document.getElementById('final-percentage').textContent = percentage + '%';
    
    // Determine message
    let message = '';
    if (percentage === 100) {
        message = 'ðŸŒŸ Perfect Score! Outstanding work!';
    } else if (percentage >= 80) {
        message = 'ðŸŽ‰ Excellent! You\'re doing great!';
    } else if (percentage >= 60) {
        message = 'ðŸ‘ Good job! Keep practicing!';
    } else {
        message = 'ðŸ’ª Keep trying! You\'ll get better!';
    }
    document.getElementById('final-message').textContent = message;
    
    // Submit results to backend
    submitQuizResults(finalScore, whoAmIBonus);
}

function submitQuizResults(finalScore, whoAmIBonus) {
    // Submit quiz results to your backend
    fetch('/api/submit-quiz', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            quiz_attempt_id: QUIZ_ATTEMPT_ID,
            topic: TOPIC,
            difficulty: DIFFICULTY,
            score: correctAnswers,
            total_questions: questions.length,
            percentage: Math.round((correctAnswers / questions.length) * 100),
            points: finalScore,
            who_am_i_bonus: whoAmIBonus
        })
    })
    .then(response => response.json())
    .then(data => {
        console.log('Quiz results submitted:', data);
    })
    .catch(error => {
        console.error('Error submitting quiz:', error);
    });
}
</script>

</body>
</html>
